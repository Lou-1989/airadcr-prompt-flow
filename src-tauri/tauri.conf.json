{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:8080",
    "distDir": "../dist"
  },
  "package": {
    "productName": "AIRADCR",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setAlwaysOnTop": true,
        "setPosition": true,
        "setSize": true,
        "setFocus": true,
        "setFullscreen": true
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      },
      "notification": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "readFile": false,
        "writeFile": false,
        "createDir": false
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "nsis", "deb", "appimage", "dmg"],
      "identifier": "com.airadcr.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png", 
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Copyright © 2025 AIRADCR. Tous droits réservés. Site officiel : https://airadcr.com",
      "category": "Medical",
      "shortDescription": "Logiciel médical professionnel de dictée radiologique - AIRADCR",
      "longDescription": "AIRADCR (https://airadcr.com) est une solution médicale professionnelle développée pour les radiologues. Elle améliore la qualité et la structure des comptes rendus radiologiques grâce à une interface de dictée intelligente. Utilisée par les professionnels de santé pour optimiser leur workflow médical. Développé par Dr Lounes BENSID.",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "tsp": false,
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": "fr-FR",
          "fragmentPaths": [],
          "componentGroupRefs": [],
          "componentRefs": [],
          "featureGroupRefs": [],
          "featureRefs": [],
          "mergeRefs": [],
          "skipWebviewInstall": false,
          "license": "LICENSE.rtf",
          "enableElevatedUpdateTask": true,
          "bannerPath": "assets/banner.bmp",
          "dialogImagePath": "assets/dialog.bmp"
        },
        "nsis": {
          "license": "LICENSE.txt",
          "headerImage": "assets/header.bmp",
          "sidebarImage": "assets/sidebar.bmp",
          "installerIcon": "assets/installer.ico",
          "installMode": "perMachine",
          "languages": ["French", "English"],
          "displayLanguageSelector": true
        }
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "windowPosition": {
          "x": 400,
          "y": 100
        },
        "background": null
      }
    },
    "cli": {
      "description": "AIRADCR Desktop - Application de dictée radiologique",
      "args": [
        {
          "name": "url",
          "index": 1,
          "takesValue": true,
          "description": "URL airadcr:// à ouvrir"
        }
      ]
    },
    "security": {
      "csp": "default-src 'self' tauri://localhost https://tauri.localhost; connect-src 'self' https://airadcr.com tauri://localhost https://tauri.localhost; frame-src https://airadcr.com; child-src https://airadcr.com; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https:"
    },
    "updater": {
      "active": false,
      "endpoints": [
        "https://airadcr.com/api/tauri-updates/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFJUkFEQ1IgVXBkYXRlcgpSV1FBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUE9Cg=="
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "AIRADCR",
        "width": 1400,
        "minWidth": 300,
        "minHeight": 200,
        "center": true,
        "decorations": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "transparent": false,
        "maximized": false,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "fileDropEnabled": false,
        "url": "index.html"
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "AIRADCR"
    }
  }
}