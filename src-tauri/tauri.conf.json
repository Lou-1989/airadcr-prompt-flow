{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "AirADCR Desktop",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setAlwaysOnTop": true,
        "setPosition": true,
        "setSize": true,
        "setFocus": true,
        "setFullscreen": true
      },
      "clipboard": {
        "all": true,
        "readText": true,
        "writeText": true
      },
      "notification": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "readFile": false,
        "writeFile": false,
        "createDir": false
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis", "deb", "appimage", "dmg"],
      "identifier": "com.airadcr.desktop",
      "icon": [
        "icons/icon.icns",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png", 
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Copyright © 2025 AirADCR. Tous droits réservés.",
      "category": "Medical",
      "shortDescription": "Dictée intelligente pour radiologie",
      "longDescription": "AirADCR améliore la qualité des comptes rendus radiologiques grâce à une dictée intelligente optimisée pour la radiologie. La solution structure automatiquement les rapports, réduisant la variabilité inter-utilisateurs et le temps de dictée.",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "tsp": false,
        "nsis": {
          "license": "LICENSE.txt",
          "headerImage": "assets/header.bmp",
          "sidebarImage": "assets/sidebar.bmp",
          "installerIcon": "assets/installer.ico",
          "installMode": "perMachine",
          "languages": ["French", "English"],
          "displayLanguageSelector": true
        }
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "windowPosition": {
          "x": 400,
          "y": 100
        },
        "background": null
      }
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://airadcr.com; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https:"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 900,
        "resizable": true,
        "title": "AirADCR Desktop",
        "width": 1400,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true,
        "transparent": false,
        "maximized": false,
        "closable": true,
        "minimizable": true,
        "maximizable": true,
        "fileDropEnabled": false,
        "url": "index.html"
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "AirADCR Desktop"
    }
  }
}